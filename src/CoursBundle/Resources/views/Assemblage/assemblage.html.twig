{# empty Twig template #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title> Les Assemblages </title>
    </head>
        
    <body>
	<a href="{{ path('add_assemblage') }}">Ajouter un assemblage </a> 
	
        <h4> Les assemblages </h4>
        <table>
            <thead>
                <tr>
                    <th>Vin</th>
                    <th>Ceapge</th>
                    <th>Détail</th>
                    <th>Suppression</th>
                </tr>
            </thead>
            <tbody>
                {% for assemblage in assemblages %}
                    <tr>
                        <td> {{ assemblage.vin.nom }}</td>
                        <td> {{ assemblage.cepage.nom }}</td>
                        <td> {{ assemblage.pourcentage }}</td>
                        <td> <a href= "{{ path('info_assemblage',{ 'id' : assemblage.id }) }}" > Détails </a> </td>
                        <td> <a href= "{{ path('suppression_assemblage',{ 'id' : assemblage.id }) }}" > suppression </a> </td>
                    </tr>    
                {% endfor %}
            </tbody> 
        </table>
            <a href= "{{ path('cours_homepage') }}" > Retour à la liste </a>  
    </body>
</html>
