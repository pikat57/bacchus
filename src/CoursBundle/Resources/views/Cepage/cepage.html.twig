{# empty Twig template #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title> Les Cepages </title>
    </head>
        
    <body>
	<a href="{{ path('add_cepage') }}">Ajouter un cepage </a> 
	
        <h4> Les cepages </h4>
        <table>
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Couleur</th>
                    <th>Détail</th>
                    <th>Suppression</th>
                </tr>
            </thead>
            <tbody>
                {% for cepage in cepages %}
                    <tr>
                        <td> {{ cepage.nom }}  </td>
                        <td> {{ cepage.couleur }} </td>
                        <td> <a href= "{{ path('info_cepage',{ 'id' : cepage.id }) }}" > Détails </a> </td>
                        <td> <a href= "{{ path('suppression_cepage',{ 'id' : cepage.id }) }}" > suppression </a> </td>
                    </tr>    
                {% endfor %}
            </tbody> 
        </table>
            <a href= "{{ path('cours_homepage') }}" > Retour à la liste </a>  
    </body>
</html>
